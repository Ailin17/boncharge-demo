{
  "devDependencies": {
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "sass": "^1.90.0"
  },
  "scripts": {
  "build:css": "sass assets/styles/main.scss assets/styles/main.css --no-source-map",
  "watch:css": "sass --watch assets/styles/main.scss assets/styles/main.css --no-source-map",
  "build:js": "esbuild assets/scripts/main.ts --bundle --outdir=assets/scripts/dist --platform=browser --format=esm --minify",
  "watch:js": "esbuild assets/scripts/main.ts --bundle --outdir=assets/scripts/dist --platform=browser --format=esm --watch",
  "build": "run-p build:*",
  "watch": "run-p watch:*"
  }
}
