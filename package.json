{
  "devDependencies": {
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "sass": "^1.90.0"
  },
  "scripts": {
    "build:css": "sass styles/main.scss assets/main.css --no-source-map",
    "watch:css": "sass --watch styles/main.scss assets/main.css --no-source-map",
    "build:js": "esbuild scripts/main.ts --bundle --outdir=assets --platform=browser --format=esm --minify",
    "watch:js": "esbuild scripts/main.ts --bundle --outdir=assets --platform=browser --format=esm --watch",
    "build": "run-p build:*",
    "watch": "run-p watch:*"
  }
}